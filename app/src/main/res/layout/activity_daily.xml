<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_daily"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.neu.tomi.view.DailyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/llMenu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTypeDailyLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_daily_type_selected"
            android:gravity="center"
            android:padding="4dp"
            android:text="Daily Login"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTypeInbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_daily_type"
            android:gravity="center"
            android:padding="4dp"
            android:text="Inbox"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTypeOurMerchants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_daily_type"
            android:gravity="center"
            android:padding="4dp"
            android:text="Our Merchants"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTypeAbout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_daily_type"
            android:gravity="center"
            android:padding="4dp"
            android:text="About"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_below="@+id/llMenu"
        android:layout_marginTop="-0.1dp"
        android:background="@drawable/bg_daily_viewpaper"
        android:layout_height="match_parent"/>
</RelativeLayout>
