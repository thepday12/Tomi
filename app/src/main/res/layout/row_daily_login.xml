<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRowDailyLogin"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_margin="0.5dp"
    android:background="@drawable/bg_row_dailylogin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItemIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_coin" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ivItemIcon"
        android:gravity="center"
        android:text="10,000"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/tvDayConsecutive"
        android:layout_width="13dp"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_day_normal"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:text="28"
        android:textColor="@android:color/white"
        android:textSize="4dp" />

    <ImageView
        android:id="@+id/ivChecked"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_checked"
        android:visibility="gone" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvNextDay"
        android:visibility="gone"
        android:layout_height="match_parent" />
</RelativeLayout>