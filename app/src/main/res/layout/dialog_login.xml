<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_first_login"
    android:padding="16dp">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btSignInFacebook"
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content"
         />


    <com.google.android.gms.common.SignInButton
        android:layout_marginTop="16dp"
        android:id="@+id/btSignInGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_height="40dp" android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:text="Sign up"
            android:id="@+id/btSignUp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_sign_up_login"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="Sign in"
            android:id="@+id/btSignIn"
            android:textColor="@android:color/white"
            android:background="@drawable/button_sign_up_login"
            />
    </LinearLayout>
</LinearLayout>
