<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="244dp"
    android:background="@drawable/map"
    android:orientation="vertical"
    android:padding="16dp">
<LinearLayout
    android:id="@+id/llGift"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGift1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/coconut" />

        <ImageView
            android:id="@+id/ivGift2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/castle" />

        <ImageView
            android:id="@+id/ivGift3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/ball" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGift4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/starfish" />

        <ImageView
            android:id="@+id/ivGift5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/shell" />

        <ImageView
            android:id="@+id/ivGift6"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_gift"
            android:scaleType="fitCenter"
            android:src="@drawable/cocktail" />
    </LinearLayout>

</LinearLayout>
    <TextView
        android:id="@+id/tvAutoOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llGift"
        android:layout_alignParentTop="true"
        android:text=""
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_bright"/>
</RelativeLayout>
